#!/bin/bash
#
# mattermost        Startup script for mattermost.
#
# chkconfig: 2345 85 15
# Mattermost brings your team communication into one place
### BEGIN INIT INFO
# Provides:          mattermost
# Required-Start:    $local_fs $network $named $time $syslog <%= @depend_service %>
# Required-Stop:     $local_fs $network $named $time $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Description:       Mattermost brings your team communication into one place
### END INIT INFO

name=mattermost
dir=<%= @symlink %>
exe=bin/platform
exe_args="-config='<%= @conf %>'" 
uid=<%= @user %>
pidfile='/var/run/mattermost.pid'

. /etc/init.d/functions

start() {
  echo "Starting daemon: " ${name}
  # start the program
  cd ${dir}
  daemon --user ${uid} ${exe} ${exe_args} >/dev/null 2>&1 &
  [ $? = 0 ] && { exit 0 ; } || { exit 1 ; }
}
stop() {
  echo "Stopping daemon: " $name
  if rh_status_q; then
    killproc ${exe}
  else
    true
  fi
  retval=$?
  echo
  [ ${retval} = 0 ] && rm -f ${pidfile}
  return ${retval}
}
restart() {
  echo "Restarting daemon: " $name
  stop
  start
}
rh_status() {
  status ${exe}
  retval=$?
  return ${retval}
}
rh_status_q() {
  rh_status >/dev/null 2>&1
}
case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  reload)
    restart
    ;;
  status)
    rh_status
    ;;
  *)
    echo "Usage: ${name} {start|stop|restart|reload|status}"
    exit 2
      ;;
esac
